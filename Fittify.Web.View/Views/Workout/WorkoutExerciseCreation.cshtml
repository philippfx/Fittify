@using Fittify.Web.ViewModels.Sport
@model List<Fittify.Web.ViewModels.Sport.WorkoutViewModel>

@{
    ViewBag.Title = "Workouts";
}

<div>
    <h2>Add a  workout</h2>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                Name
            </th>
            <th>
                History
            </th>
            <th>
                Start New Session
            </th>
        </tr>
        @foreach (var workout in Model)
        {
            <tr>
                <td><a href="~/workouts/@workout?.Id/RelatedExercises">@workout?.Name</a></td>
                <td><a href="~/workouts/@workout?.Id/History">Show history</a></td>
                <td>
                    <form action="~/workout/history/new" method="post">
                        <input name="workoutId" type="hidden" value="@workout?.Id"/>
                               <input type="submit" value="Start" class="btn btn-default"/>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>