@using Fittify.Web.ViewModels.Sport
@model List<Fittify.Web.ViewModels.Sport.WorkoutViewModel>

@{
    ViewBag.Title = "Workouts";
}

<div>
    <h2>Your workouts</h2>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                Name
            </th>
            <th>
                History
            </th>
            <th>
                Start New Session
            </th>
        </tr>
        @foreach (var workout in Model)
        {
            <tr>
                <td><a href="~/workouts/@workout?.Id/associatedexercises">@workout?.Name</a></td>
                <td><a href="~/workouts/@workout?.Id/History">Show history</a></td>
                <td>
                    <form action="~/workouthistories" method="post">
                        <input name="workoutId" type="hidden" value="@workout?.Id"/>
                        <input type="submit" onclick="return confirm('Are you sure you want to delete?')" value="Start" class="btn btn-default"/>
                    </form>
                </td>
            </tr>
        }
    </table>
    <form class="form-group" action="~/workouts" method="post">
        <input type="text" name="name"/>
        <input type="submit" value="Add Workout" class="btn btn-primary" />
    </form>
</div>